<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Parent and App level -->
    <style name="Brand" parent="Theme.AppCompat.Light.DarkActionBar"/>
    <!-- Child and Main Activity level -->
    <!-- Child and Activity level -->
    <style name="Brand.Activity" parent="Brand">
        <!-- android:windowBackground colors the root background area of the app -->
        <item name="android:windowBackground">@color/theme_myapp_window_background</item>
        <!-- colorPrimaryDark colors the status bar -->
        <item name="colorPrimaryDark">@color/theme_myapp_primary_dark</item>
        <!-- colorPrimary colors the action bar and toolbar -->
        <item name="colorPrimary">@color/theme_myapp_primary</item>
        <!-- colorAccent colors the floating action button and accents of controls -->
        <item name="colorAccent">@color/theme_myapp_accent</item>
        <!-- colorControlHighlight controls the material ripple color -->
        <item name="colorControlHighlight">@color/theme_myapp_control_highlight</item>
        <!-- android:textColor controls the color of text in the app -->
        <item name="android:textColor">@color/theme_myapp_text_color</item>
        <!-- android:textColorHint controls the color of hint in the EditText -->
        <item name="android:textColorHint">@color/theme_myapp_primary_dark</item>
        <!-- android:navigationBarColor controls the color of the navigation bar -->
        <item name="android:navigationBarColor">@color/theme_myapp_primary_dark</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>