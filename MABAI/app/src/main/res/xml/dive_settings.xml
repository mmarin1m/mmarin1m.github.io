            android:inputType="number"
            android:defaultValue="@string/code_rockbottom_sac_unit" />
        <EditTextPreference
            android:key="rockbottomRmv"
            android:title="@string/lbl_rockbottom_rmv_unit"
            android:summary="@string/hint_rockbottom_rmv_unit"
            android:inputType="number"
            android:defaultValue="@string/code_rockbottom_rmv_unit" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/hdr_blending">
        <EditTextPreference
            android:key="heliumMix"
            android:title="@string/lbl_helium_mix"
            android:summary="@string/hint_helium_mix"
            android:inputType="number"
            android:defaultValue="@string/code_helium_mix" />
        <EditTextPreference
            android:key="oxygenMix"
            android:title="@string/lbl_oxygen_mix"
            android:summary="@string/hint_oxygen_mix"
            android:inputType="number"
            android:defaultValue="@string/code_oxygen_mix" />
        <EditTextPreference
            android:key="topOffMix"
            android:title="@string/lbl_top_off_mix"
            android:summary="@string/hint_top_off_mix"
            android:inputType="number"
            android:defaultValue="@string/code_top_off_mix" />
        <EditTextPreference
            android:key="lengthHose"
            android:title="@string/lbl_length_hose"
            android:summary="@string/hint_length_hose"
            android:inputType="number"
            android:defaultValue="@string/code_length_hose" />
