        <EditTextPreference
            android:key="rockbottomMinPressure"
            android:title="@string/lbl_rockbottom_minimum_pressure_unit"
            android:summary="@string/hint_rockbottom_minimum_pressure_unit"
            android:inputType="number"
            android:defaultValue="@string/code_rockbottom_min_pressure_unit"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/hdr_sac_rmv">
        <EditTextPreference
            android:key="rockbottomSac"
            android:title="@string/lbl_rockbottom_sac_unit"
