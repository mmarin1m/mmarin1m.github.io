    <PreferenceCategory
        android:title="@string/hdr_bluetooth">
        <EditTextPreference
            android:key="scanningTimeout"
            android:title="@string/lbl_scanning_timeout"
            android:summary="@string/hint_scanning_period"
            android:inputType="number"
            android:defaultValue="@string/code_scanning_timeout" />
        <EditTextPreference
            android:key="connectionTimeout"
            android:title="@string/lbl_connection_timeout"
            android:summary="@string/hint_connecting_period"
            android:inputType="number"
            android:defaultValue="@string/code_scanning_timeout" />
