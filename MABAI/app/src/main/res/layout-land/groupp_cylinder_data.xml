<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="grouppCylinder"
            type="ca.myairbuddyandi.GrouppCylinder"/>
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/groupp_cylinder_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">
        <TableLayout
            android:id="@+id/content_table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:stretchColumns="1,2,3,4,5,6">
            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="15"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:checked="@={grouppCylinder.checked}"
                    android:visibility="@{grouppCylinder.visible ? View.VISIBLE : View.GONE}"/>
                <FrameLayout
                    android:layout_weight="2"
                    android:layout_width="0dp">
                    <ImageView
                        android:id="@+id/gmail_item_letter"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:contentDescription="@string/cd_icon_group_cylinder"/>
                </FrameLayout>
                <TextView
                    android:text="@{`` + grouppCylinder.cylinderNo}"
                    android:gravity="end|center"
                    android:layout_gravity="end|center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:layout_width="0dp"/>
                <!-- NOTE: Do not remove Unknown attribute android:selectedItemPosition-->
                <Spinner
                    android:id="@+id/spinnerUsage"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:selectedItemPosition="@={grouppCylinder.usageTypePosition}"
                    android:clickable="false"
                    android:gravity="start|center"
                    android:layout_gravity="start|center"
                    android:layout_weight="5"
                    app:setOnItemSelectedListener="@{grouppCylinder.getOnSpinnerChangedUsageType}"/>
                <TextView
                    android:text="@{grouppCylinder.cylinderType}"
                    android:gravity="center|center"
                    android:layout_gravity="start|center"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
                <TextView
                    android:text="@{`` + grouppCylinder.volume}"
                    android:gravity="end|center"
                    android:layout_gravity="end|center"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
                <TextView
                    android:text="@{`` + grouppCylinder.ratedPressure}"
                    android:gravity="end|center"
                    android:layout_gravity="end|center"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
            </TableRow>
            <TableLayout
                android:id="@+id/expendArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                android:layout_marginTop="5dp">
                <TableRow
                    android:id="@+id/expandIcon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="9"
                    android:gravity="start">
                    <FrameLayout
                        android:layout_weight="2"
                        android:layout_width="0dp">
                        <ImageView
                            android:id="@+id/detailIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:background="@drawable/ic_details"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/cd_icon_detail"/>
                    </FrameLayout>
                    <View
                        android:id="@+id/filler1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"/>
                </TableRow>
                <TableRow
                    android:id="@+id/expandDetail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="9"
                    android:gravity="start">
                    <TextView
                        android:id="@+id/detailTxt"
                        android:text="@string/lbl_detail"
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                    <View
                        android:id="@+id/filler2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"/>
                </TableRow>
            </TableLayout>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</layout>