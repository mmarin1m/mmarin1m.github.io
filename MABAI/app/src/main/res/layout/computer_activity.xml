<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="computer"
            type="ca.myairbuddyandi.Computer"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/computer_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:id="@+id/test_connection_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_test_connection"
                android:enabled="false"
                android:alpha="0.5"
                android:layout_weight="2"
                android:background="@color/very_light_blue"
                style="attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel"
                android:layout_weight="1"
                android:background="@color/very_light_blue"
                style="attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_save"
                android:layout_weight="1"
                android:background="@color/very_light_blue"
                style="attr/borderlessButtonStyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/status_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_disconnected"
                android:enabled="false"
                android:layout_weight="1"
                android:background="@color/red"
                style="attr/borderlessButtonStyle"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.vendor}"
                            android:id="@+id/editTextVE"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_vendor"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.product}"
                            android:id="@+id/editTextPR"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_product"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            app:addTextChangedListener="@{computer.getOnTextChanged}"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.description}"
                            android:id="@+id/editTextDE"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:gravity="start"
                            android:layout_marginEnd="10dp"
                            android:focusable="true"
                            app:addTextChangedListener="@{computer.getOnTextChanged}"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.macAddress}"
                            android:id="@+id/editTextMA"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_mac_address"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="true"
                            app:addTextChangedListener="@{computer.getOnTextChanged}"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.transportX}"
                            android:id="@+id/editTextTR"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_transport"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.serialNumber}"
                            android:id="@+id/editTextSN"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_serial_number"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.fw}"
                            android:id="@+id/editTextFW"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_fw"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.fwId}"
                            android:id="@+id/editTextFWId"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_fwId"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.language}"
                            android:id="@+id/editTextLA"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_language"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.unit}"
                            android:id="@+id/editTextUN"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_unit"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:text="@={computer.connectionType}"
                            android:id="@+id/editTextCT"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="@string/hint_connection_type"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLibDiveComputerPickScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        app:layout_anchorGravity="bottom|right|end"
        android:background="@color/theme_myapp_window_background"
        app:srcCompat="@drawable/ic_bluetooth_scan"
        android:contentDescription="@string/hint_computer" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>