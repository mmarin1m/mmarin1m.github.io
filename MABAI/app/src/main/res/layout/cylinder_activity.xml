<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="cylinder"
            type="ca.myairbuddyandi.Cylinder"/>
    </data>
    <LinearLayout
        android:id="@+id/cylinder_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel"
                android:layout_weight=".5"
                android:background="@color/very_light_blue"
                style="attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_save"
                android:layout_weight=".5"
                android:background="@color/very_light_blue"
                style="attr/borderlessButtonStyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/addCylinderType"
                android:text="@string/lbl_add_cylinder_type"
                android:enabled="true"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_myapp_action_bar"
                android:layout_weight="1" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- NOTE: Do not remove Unknown attribute android:selectedItemPosition-->
                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerCylinderType"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:selectedItemPosition="@={cylinder.cylinderTypePosition}"
                    app:ms_floatingLabelColor="@color/blue"
                    app:ms_multiline="true"
                    app:ms_enableFloatingLabel="true"
                    app:ms_enableErrorLabel="false"
                    app:ms_floatingLabelText="@string/hint_type"
                    app:ms_hint="@string/hint_type"
                    app:setOnItemSelectedListener="@{cylinder.getOnSpinnerChangedCylinderType}"
                    app:adapter="@{cylinder.AdapterCylinderType}"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={`` + cylinder.volume}"
                        android:id="@+id/editTextVO"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_volume"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={`` + cylinder.ratedPressure}"
                        android:id="@+id/editTextRP"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_rated_pressure"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={cylinder.brand}"
                        android:id="@+id/editTextBR"
                        android:inputType="textCapWords"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_brand"
                        android:maxLength="20"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={cylinder.model}"
                        android:id="@+id/editTextMO"
                        android:inputType="textCapWords"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_model"
                        android:maxLength="20"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={cylinder.serialNo}"
                        android:id="@+id/editTextSN"
                        android:inputType="textCapWords"
                        android:digits=" ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789/-"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_serial_number"
                        android:maxLength="20"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={cylinder.tankColor}"
                        android:id="@+id/editTextCO"
                        android:inputType="textCapWords"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_tank_color"
                        android:maxLength="20"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={cylinder.lastVipString}"
                        android:id="@+id/editTextLV"
                        android:inputType="date"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_last_vip"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:focusable="false"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={cylinder.lastHydroString}"
                        android:id="@+id/editTextLH"
                        android:inputType="date"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_last_hydro"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:focusable="false"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:text="@={`` + cylinder.weightFull}"
                    android:id="@+id/editTextWF"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:hint="@string/hint_weight_full"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:selectAllOnFocus="true"
                    app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                    tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={`` + cylinder.weightEmpty}"
                        android:id="@+id/editTextWE"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_weight_empty"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={`` + cylinder.buoyancyFull}"
                        android:id="@+id/editTextBF"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_buoyancy_full"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={`` + cylinder.buoyancyEmpty}"
                        android:id="@+id/editTextBE"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_buoyancy_empty"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{cylinder.getOnTextChanged}"
                        tools:ignore="Autofill"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>