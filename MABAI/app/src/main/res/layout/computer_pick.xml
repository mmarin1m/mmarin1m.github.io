<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="computerPick"
            type="ca.myairbuddyandi.ComputerPick"/>
        <import type="android.view.View"/>
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/computer_pick_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="5dp">
        <TableLayout
            android:id="@+id/content_table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:stretchColumns="1,2,3">
            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:checked="@={computerPick.checked}"
                    android:visibility="@{computerPick.visible ? View.VISIBLE : View.GONE}"/>
                <TextView
                    android:text="@{`` + computerPick.computerNo}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end|center"
                    android:layout_gravity="end|center"/>
                <TextView
                    android:text="@{computerPick.description}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end|center"
                    android:layout_gravity="end|center"/>
            </TableRow>
            <TableLayout
                android:id="@+id/expandArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="0,1"
                android:stretchColumns="2"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                android:weightSum="7">
                <TableRow
                    android:id="@+id/expandIcon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <FrameLayout
                        android:layout_weight="2"
                        android:layout_width="0dp">
                        <ImageView
                            android:id="@+id/detailIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:background="@drawable/ic_details"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/cd_icon_detail"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_weight="2"
                        android:layout_width="0dp">
                        <ImageView
                            android:id="@+id/diveIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:background="@drawable/ic_dive"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/cd_computer_dives"/>
                    </FrameLayout>
                    <View
                        android:id="@+id/filler1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:id="@+id/expandDetail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <TextView
                        android:id="@+id/detailTxt"
                        android:text="@string/lbl_detail"
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                    <TextView
                        android:id="@+id/divesTxt"
                        android:text="@string/lbl_computer_dives"
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                    <View
                        android:id="@+id/filler2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</layout>