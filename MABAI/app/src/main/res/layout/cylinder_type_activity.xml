<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="cylinderType"
            type="ca.myairbuddyandi.CylinderType"/>
    </data>
    <LinearLayout
        android:id="@+id/cylinder_type_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel"
                android:layout_weight=".5"
                android:background="@color/very_light_blue"
                style="attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_save"
                android:layout_weight=".5"
                android:background="@color/very_light_blue"
                style="attr/borderlessButtonStyle"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:text="@={cylinderType.cylinderType}"
                    android:id="@+id/editTextCT"
                    android:inputType="textCapCharacters"
                    android:imeOptions="actionNext"
                    android:hint="@string/hint_type"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:selectAllOnFocus="true"
                    app:addTextChangedListener="@{cylinderType.getOnTextChanged}"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:text="@={cylinderType.description}"
                    android:id="@+id/editTextDE"
                    android:inputType="textCapWords"
                    android:imeOptions="actionNext"
                    android:hint="@string/hint_desc"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:selectAllOnFocus="true"
                    app:addTextChangedListener="@{cylinderType.getOnTextChanged}"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:text="@={`` + cylinderType.volume}"
                    android:id="@+id/editTextVO"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:hint="@string/hint_volume"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:selectAllOnFocus="true"
                    app:addTextChangedListener="@{cylinderType.getOnTextChanged}"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:text="@={`` + cylinderType.ratedPressure}"
                    android:id="@+id/editTextRP"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:hint="@string/hint_rated_pressure"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:selectAllOnFocus="true"
                    app:addTextChangedListener="@{cylinderType.getOnTextChanged}"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</layout>