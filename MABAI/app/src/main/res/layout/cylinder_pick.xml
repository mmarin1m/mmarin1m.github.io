<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="cylinderPick"
            type="ca.myairbuddyandi.CylinderPick"/>
        <import type="android.view.View"/>
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">
        <TableLayout
            android:id="@+id/cylinder_pick_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="0"
                android:stretchColumns="1,2,3,4,5"
                android:weightSum="11"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:checked="@={cylinderPick.checked}"
                    android:visibility="@{cylinderPick.visible ? View.VISIBLE : View.GONE}"/>
                <FrameLayout
                    android:layout_weight="2"
                    android:layout_width="0dp">
                    <ImageView
                        android:id="@+id/gmail_item_letter"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/cd_icon_cylinder"/>
                </FrameLayout>
                <TextView
                    android:text="@{`` + cylinderPick.cylinderNo}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:layout_gravity="end|center"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="0dp"/>
                <TextView
                    android:text="@{cylinderPick.cylinderType}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="start|center"
                    android:layout_gravity="start|center"/>
                <TextView
                    android:text="@{`` + cylinderPick.volume}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end|center"
                    android:layout_gravity="end|center"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="0dp"/>
                <TextView
                    android:text="@{cylinderPick.groupDescription}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center|center"
                    android:layout_gravity="center|center"/>
            </TableRow>
            <TableLayout
                android:id="@+id/expandArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:weightSum="11">
                <TableRow
                    android:id="@+id/expandIcon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <FrameLayout
                        android:layout_weight="2"
                        android:layout_width="0dp">
                        <ImageView
                            android:id="@+id/detailIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:background="@drawable/ic_details"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/cd_icon_detail"/>
                    </FrameLayout>
                    <View
                        android:id="@+id/filler1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="9"/>
                </TableRow>
                <TableRow
                    android:id="@+id/expandDetail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <TextView
                        android:id="@+id/detailTxt"
                        android:text="@string/lbl_detail"
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                    <View
                        android:id="@+id/filler2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"/>
                </TableRow>
            </TableLayout>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</layout>