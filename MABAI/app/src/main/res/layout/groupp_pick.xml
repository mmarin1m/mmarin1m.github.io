<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="grouppPick"
            type="ca.myairbuddyandi.GrouppPick"/>
        <import type="android.view.View"/>
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/groupp_pick_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="2dp">
        <TableLayout
            android:id="@+id/content_table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:stretchColumns="1,2,3,4">
            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12">
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:checked="@={grouppPick.checked}"
                    android:visibility="@{grouppPick.visible ? View.VISIBLE : View.GONE}"/>
                <FrameLayout
                    android:layout_weight="2"
                    android:layout_width="0dp">
                    <ImageView
                        android:id="@+id/gmail_item_letter"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/cd_icon_group"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/groupTypeDesc"
                    android:text="@{grouppPick.groupTypeDescription}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:gravity="start"
                    android:layout_weight="3"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"/>
                <TextView
                    android:id="@+id/desc"
                    android:text="@{grouppPick.description}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:gravity="start"
                    android:layout_weight="4"/>
                <TextView
                    android:id="@+id/dives"
                    android:text="@{`` + grouppPick.dives}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:gravity="center"
                    android:layout_weight="2"/>
            </TableRow>
            <TableLayout
                android:id="@+id/expandArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:weightSum="9">
                <TableRow
                    android:id="@+id/expandIcon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <FrameLayout
                        android:layout_weight="2"
                        android:layout_width="0dp">
                    <ImageView
                        android:id="@+id/detailIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/ic_details"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/cd_icon_detail"/>
                    </FrameLayout>
                    <View
                        android:id="@+id/filler1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="7"/>
                </TableRow>
                <TableRow
                    android:id="@+id/expandDetail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:weightSum="9">
                    <TextView
                        android:id="@+id/detailTxt"
                        android:text="@string/lbl_detail"
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                    <View
                        android:id="@+id/filler2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"/>
                </TableRow>
            </TableLayout>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</layout>