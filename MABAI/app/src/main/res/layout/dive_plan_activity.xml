<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="divePlan"
            type="ca.myairbuddyandi.DivePlan"/>
    </data>
    <LinearLayout
        android:id="@+id/dive_plan_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel"
                android:layout_weight=".5"
                android:background="@color/very_light_blue"
                style="attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_save"
                android:layout_weight=".5"
                android:background="@color/very_light_blue"
                style="attr/borderlessButtonStyle"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={`` + divePlan.minute}"
                        android:id="@+id/editTextMI"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_minute"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{divePlan.getOnTextChanged}"
                        tools:ignore="Autofill" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={`` + divePlan.depth}"
                        android:id="@+id/editTextDE"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_depth"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:focusable="true"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{divePlan.getOnTextChanged}"
                        tools:ignore="Autofill" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text="@={`` + divePlan.orderNo}"
                        android:id="@+id/editTextON"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:hint="@string/hint_order_no"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:selectAllOnFocus="true"
                        app:addTextChangedListener="@{divePlan.getOnTextChanged}"
                        tools:ignore="Autofill" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>