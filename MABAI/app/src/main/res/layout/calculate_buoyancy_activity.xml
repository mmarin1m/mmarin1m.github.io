<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="calculateBuoyancy"
            type="ca.myairbuddyandi.CalculateBuoyancy"/>
    </data>
    <RelativeLayout
        android:id="@+id/calculate_buoyancy_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:id="@+id/buttonRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buoyancy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_buoyancy"
                android:background="@color/very_light_blue"
                android:layout_weight="0.3"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/weight_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_weight"
                android:background="@color/very_light_blue_tinted"
                android:layout_weight="0.3"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_clear"
                android:background="@color/white"
                android:layout_weight="0.3"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonRow">
            <TableRow
                android:id="@+id/TableRowHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:weightSum="3"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                tools:ignore="UselessParent">
                <TextView
                    android:id="@+id/defaultUnit"
                    android:text="@string/lbl_imperial"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/switchUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|center"
                    app:srcCompat="@drawable/ic_switch"
                    app:tint="@color/theme_myapp_action_bar"
                    android:contentDescription="@string/cd_switch_unit"/>
                <TextView
                    android:id="@+id/otherUnit"
                    android:text="@string/lbl_metric"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
            <TableRow
                android:id="@+id/TableRowSalinity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:weightSum="6"
                android:paddingTop="0dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">
                <!-- NOTE: Do not remove Unknown attribute android:selectedItemPosition-->
                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/defaultSalinity"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:selectedItemPosition="@={calculateBuoyancy.defaultSalinityPosition}"
                    android:layout_weight="2"
                    app:ms_multiline="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_enableErrorLabel="false"
                    app:setOnItemSelectedListener="@{calculateBuoyancy.getOnSpinnerChangedDefaultSalinity}"
                    app:adapter="@{calculateBuoyancy.AdapterDefaultSalinity}"
                    />
                <TextView
                    android:id="@+id/hdrSalinityLbl"
                    android:text="@string/hdr_salinity"
                    android:gravity="center|center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/otherSalinity"
                    android:text="@string/lbl_blank"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </TableRow>
            <TableRow
                android:id="@+id/TableRowWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:weightSum="6"
                android:paddingTop="0dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">
                <EditText
                    android:text="@={`` + calculateBuoyancy.defaultWeight}"
                    android:id="@+id/defaultWeight"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:selectAllOnFocus="true"
                    android:labelFor="@+id/defaultWeight"
                    android:padding="6dp"
                    style="@style/Widget.AppCompat.EditText"
                    tools:ignore="Autofill" />
                <TextView
                    android:id="@+id/defaultWeightLbl"
                    android:text="@string/lbl_imperial_weight_unit"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/weight_button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:gravity="center"
                    android:text="@string/hdr_object_weight"
                    android:background="@color/very_light_blue_tinted"
                    android:layout_weight="2"
                    style="?android:attr/borderlessButtonStyle"/>
                <TextView
                    android:id="@+id/otherWeight"
                    android:text="@={`` + calculateBuoyancy.otherWeight}"
                    android:gravity="end|center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/otherWeightLbl"
                    android:text="@string/lbl_metric_weight_unit"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
            <TableRow
            android:id="@+id/TableRowDisplacement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:weightSum="6"
            android:paddingTop="0dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <EditText
                android:text="@={`` + calculateBuoyancy.defaultDisplacement}"
                android:id="@+id/defaultDisplacement"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center"
                android:selectAllOnFocus="true"
                android:labelFor="@+id/defaultDisplacement"
                android:padding="6dp"
                style="@style/Widget.AppCompat.EditText"
                tools:ignore="Autofill"/>
            <TextView
                android:id="@+id/defaultDisplacementLbl"
                android:text="@string/lbl_imperial_volume_unit"
                android:textStyle="bold"
                android:gravity="start|center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_weight="1" />
            <!-- FIXME: android:layout_height is at 40dp because of the Spanish warp around -->
            <TextView
                android:id="@+id/hdrDisplacementLbl"
                android:text="@string/hdr_displacement"
                android:gravity="center|center"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2" />
            <TextView
                android:id="@+id/otherDisplacement"
                android:text="@={`` + calculateBuoyancy.otherDisplacement}"
                android:gravity="end|center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/otherDisplacementLbl"
                android:text="@string/lbl_metric_volume_unit"
                android:textStyle="bold"
                android:gravity="start|center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:id="@+id/TableRowBuoyancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:weightSum="6"
            android:paddingTop="0dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/defaultBuoyancy"
                android:text="@={`` + calculateBuoyancy.defaultBuoyancy}"
                android:textStyle="bold"
                android:gravity="end|center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/defaultBuoyancyLbl"
                android:text="@string/lbl_imperial_volume_unit"
                android:textStyle="bold"
                android:gravity="start|center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_weight="1" />
             <Button
                android:id="@+id/buoyancy_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:gravity="center"
                android:text="@string/hdr_buoyancy_needed"
                android:background="@color/very_light_blue"
                android:layout_weight="2"
                style="?android:attr/borderlessButtonStyle"/>
            <TextView
                android:id="@+id/otherBuoyancy"
                android:text="@={`` + calculateBuoyancy.otherBuoyancy}"
                android:gravity="end|center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/otherBuoyancyLbl"
                android:text="@string/lbl_metric_volume_unit"
                android:textStyle="bold"
                android:gravity="start|center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>
        </TableLayout>
    </RelativeLayout>
</layout>