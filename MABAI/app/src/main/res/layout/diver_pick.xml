<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="diver"
            type="ca.myairbuddyandi.Diver"/>
        <import type="android.view.View"/>
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/diver_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">
        <TableLayout
            android:id="@+id/content_table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:shrinkColumns="0"
                android:stretchColumns="1,2,3"
                android:weightSum="11">
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"
                    android:layout_weight="1"
                    android:checked="@={diver.checked}"
                    android:visibility="@{diver.visible == View.VISIBLE ? View.VISIBLE : diver.visible == View.INVISIBLE ? View.INVISIBLE : View.GONE}"/>
                <FrameLayout
                    android:layout_weight="3"
                    android:layout_width="0dp">
                    <ImageView
                        android:id="@+id/gmail_item_letter"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/cd_icon_diver"/>
                </FrameLayout>
                <TextView
                    android:text="@{diver.fullName}"
                    android:layout_width="0dp"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"/>
                <TextView
                    android:id="@+id/dives"
                    android:text="@{`` + diver.dives}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:layout_weight="2"/>
            </TableRow>
            <TableLayout
                android:id="@+id/expandArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                android:layout_marginTop="5dp">
                <TableRow
                    android:id="@+id/expandIcon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:weightSum="9">
                    <FrameLayout
                    android:layout_weight="2"
                    android:layout_width="0dp">
                    <ImageView
                        android:id="@+id/detailIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:background="@drawable/ic_details"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/cd_icon_detail"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="2"
                    android:layout_width="0dp">
                    <ImageView
                        android:id="@+id/grouppIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:background="@drawable/ic_groupp"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/cd_icon_group"/>
                </FrameLayout>
                    <View
                        android:id="@+id/filler1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"/>
                </TableRow>
                <TableRow
                    android:id="@+id/expandDetail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:weightSum="9">
                    <TextView
                        android:id="@+id/detailTxt"
                        android:text="@string/lbl_detail"
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                    <TextView
                        android:id="@+id/grouppTxt"
                        android:text="@string/lbl_groupp"
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                    <View
                        android:id="@+id/filler2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"/>
                </TableRow>
            </TableLayout>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</layout>